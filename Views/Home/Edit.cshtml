@model list

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Item</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Item">Item name</label>
                <input type="text" class="form-control mb-3" asp-for="Item">
                <span asp-validation-for="Item" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
        </div>
       
        
        <div style="display: flex; gap:10px;">
            <button type="submit" class="btn btn-primary ">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}