@model list


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Item</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Item">Item</label>
                <input type="text" class="form-control mb-3" asp-for="Item" placeholder="Enter Item">
                <span asp-validation-for="Item" class=" alert-danger"></span>
            </div>
             <div class="form-group col-md-6">
                <label asp-for="Price">Price</label>
                <input type="text" class="form-control mb-3" asp-for="Price" placeholder="Price">
                <span asp-validation-for="Price" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
        </div>

        <div style="display: flex; gap:10px;">
            <button type="submit" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i>Save</button><br>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
        
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}